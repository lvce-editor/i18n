{
  "name": "@lvce-editor/i18n",
  "version": "0.0.0-dev",
  "description": "Translate strings",
  "keywords": [
    "i18n"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/i18n.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "node scripts/build.js",
    "lint": "eslint .",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "9.39.1",
    "@lvce-editor/eslint-config": "^3.1.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@types/eslint__js": "^9.14.0",
    "eslint": "9.39.1",
    "execa": "^9.6.1",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "rollup": "^4.53.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
